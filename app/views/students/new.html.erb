<form action="/students" method="POST">
  <label>Name</label>
  <input name="name" placeholder=<%= @placeholder_name %> type="text"></input>
  <label>Favorite NBA Team</label>
  <input
    name="team"
    placeholder=<%= @placeholder_team %>
    type="text"
  >
  </input>
  <label>Favorite NBA Player</label>
  <input name="player" placeholder=<%= @placeholder_player %> type="text"></input>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <button type="submit">Create Sports Profile</button>
</form>